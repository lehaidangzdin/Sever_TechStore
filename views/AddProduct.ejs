<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="icon"
          href="https://img.icons8.com/external-wanicon-flat-wanicon/64/000000/external-smartband-medical-technology-wanicon-flat-wanicon.png"
          type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
<div class="container">
    <!--NAVBAR-->
    <%- include FolderInclude/navBar.ejs %>
    <!--NAVBAR-->

    <!--CONTENT-->
    <main role="main">
        <h1 class="h1" style="margin-top: 10px;margin-bottom: 20px">Thêm sản phẩm</h1>
        <form method="post" enctype="application/x-www-form-urlencoded" action='/AddProduct'>
            <div class="mb-3">
                <label for="dropDownTypeProduct" class="form-label"><strong>Thể loại sản phẩm:</strong></label>
                <select class="form-select" aria-label="Default select loai san pham" id="dropDownTypeProduct"
                        name="maLoai">
                    <option selected>Loại sản phẩm</option>
                    <option value="1">Điện thoại</option>
                    <option value="2">Laptop</option>
                    <option value="3">Đồng hồ</option>
                    <option value="4">Máy tính bảng</option>
                    <option value="5">Phụ kiện</option>
                </select>
            </div>
            <!--DropDown chon loai san pham-->
            <div class="mb-3">
                <label for="nameProduct" class="form-label"><strong>Tên sản phẩm:</strong></label>
                <input type="text" class="form-control" id="nameProduct" placeholder="Tên sản phẩm" name="nameProduct">
            </div>
            <!--            ten san pham-->
            <div class="mb-3">
                <label for="numProduct" class="form-label"><strong>Số lượng sản phẩm:</strong> </label>
                <input type="number" class="form-control" id="numProduct" placeholder="Số lượng sản phẩm"
                       name="numProduct">
            </div>
            <!--            so luong sp-->
            <div class="mb-3">
                <label for="imgProduct" class="form-label"><strong>Link ảnh sản phẩm:</strong> </label>
                <input type="text" class="form-control" id="imgProduct" placeholder="Link ảnh" name="imgProduct">
            </div>
            <!--            Link anh san pham-->
            <div class="mb-3">
                <label for="priceProduct" class="form-label"><strong>Giá sản phẩm(vnđ):</strong> </label>
                <input type="number" class="form-control" id="priceProduct" placeholder="Giá sản phẩm"
                       name="priceProduct">
            </div>
            <!--            Gia san pham-->
            <div class="mb-3">
                <label for="oldPriceProduct" class="form-label">
                    <strong>Giá cũ(vnđ):</strong>
                </label>
                <input type="number" class="form-control" id="oldPriceProduct" placeholder="Giá cũ"
                       name="oldPriceProduct">
            </div>
            <!--            Gia cu-->
            <div class="mb-3">
                <label for="moreInforProduct" class="form-label"><strong>Thông tin thêm:</strong> </label>
                <textarea class="form-control" id="moreInforProduct" name="moreInforProduct" rows="3"></textarea>
            </div>
            <!--            Mo ta san pham-->
            <!--            <a href="/AddProduct">-->
            <button type="submit" class="btn btn-outline-primary"><strong>Thêm sản phẩm</strong></button>
            <!--            </a>-->
        </form>
    </main>
    <!--CONTENT-->
    <!--FOOTER-->
    <%- include FolderInclude/footer.ejs %>
    <!--FOOTER-->
    <!--JS-->
    <script>
        //Get the button
        //Get the button
        let mybutton = document.getElementById("btn-back-to-top");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            if (
                document.body.scrollTop > 20 ||
                document.documentElement.scrollTop > 20
            ) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        mybutton.addEventListener("click", backToTop);

        function backToTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
    <!--JS-->
</div>
</body>
</html>
