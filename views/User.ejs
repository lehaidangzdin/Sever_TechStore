<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="icon"
          href="https://img.icons8.com/external-wanicon-flat-wanicon/64/000000/external-smartband-medical-technology-wanicon-flat-wanicon.png"
          type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <style>
        #btn-back-to-top {
            width: 60px;
            height: 60px;
            border-radius: 30px;
            position: fixed;
            bottom: 24px;
            right: 24px;
            display: none;
        }

        #iconButtonUp {
            width: 24px;
            height: 24px;
        }

    </style>


</head>
<body>
<div class="container">
    <!--NAVBAR-->
    <%- include FolderInclude/navBar.ejs %>
    <!--NAVBAR-->
    <!--SECSION HEADER-->
    <section class="jumbotron text-center" style="margin-top: 10px">
        <div class="container">
            <h2 class="jumbotron-heading">QUẢN LÍ TÀI KHOẢN</h2>
        </div>
    </section>
    <!--SECSION HEADER-->
    <!--SEARCH PRODUCT-->
    <form class="d-flex" action="/User/Search" method="post" enctype="application/x-www-form-urlencoded">
        <input class="form-control me-2" type="search" placeholder="Tên tài khoản" aria-label="Search" name="username">
        <button class="btn btn-outline-success" type="submit" style="width: 100px;min-height: 40px">Tìm kiếm</button>
    </form>
    <!--TEXT INFOR-->
    <div class="d-flex" style="margin-top: 5px">
        <p id="textInfor" style="min-height: 25px;color:orangered;"><%= message %></p>
    </div>
    <!--CONTENT-->
    <main role="main">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên đăng nhập</th>
                <th scope="col">Họ tên</th>
                <th scope="col">Năm sinh</th>
                <th scope="col">SĐT</th>
                <th scope="col">Địa chỉ</th>
            </tr>
            </thead>
            <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                    <th scope="row"><%= data[i].maKH %></th>
                    <td><%= data[i].tenDangNhap %></td>
                    <td><%= data[i].tenKH %></td>
                    <td><%= data[i].namSinh %></td>
                    <td><%= data[i].soDienThoai %></td>
                    <td><%= data[i].diaChi %></td>
                    <td>
                        <% if (data[i].maKH != 60) {
                        if (data[i].isDelete == 1) { %>
                            <a href="/User/Unlock/<%= data[i].maKH %>">
                                <button type="button" class="btn btn-success"
                                        style="width: 100px;min-height: 20px; font-size: 15px">Mở
                                    khóa
                                </button>
                            </a>
                        <% }else { %>
                            <a href="/User/LockUser/<%= data[i].maKH %>">
                                <button type="button" class="btn btn-danger"
                                        style="width: 100px;min-height: 20px;font-size: 15px">
                                    Khóa
                                </button>
                            </a>
                        <% }
                        } %>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </main>
    <!--CONTENT-->

    <!-- Back to top button -->
    <%- include FolderInclude/floatingButtonUp.ejs %>
    <!--FOOTER-->
    <%- include FolderInclude/footer.ejs %>
    <!--FOOTER-->
    <!--JS-->
    <script>
        //Get the button
        //Get the button
        let mybutton = document.getElementById("btn-back-to-top");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            if (
                document.body.scrollTop > 20 ||
                document.documentElement.scrollTop > 20
            ) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        mybutton.addEventListener("click", backToTop);

        function backToTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
    <!--JS-->
</div>
</body>
</html>
